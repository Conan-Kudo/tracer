<rules>

	<!-- KDE -->
	<rule name="akonadiserver" />

	<!-- Networking -->
	<rule name="wicd-monitor" />

	<!-- Web browsers -->
	<rule name="chromium" action="print" />
	<rule name="chrome-sandbox" />

</rules>

